<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="331dp"
            android:layout_height="600dp"
            android:background="@color/black_opacity"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/cotainerlogin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.628"/>
    <ImageView
            android:layout_width="220dp"
            android:layout_height="241dp" app:srcCompat="@drawable/logo_redondo" android:id="@+id/logoredondo"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.05"/>
    <TextView
            android:text="Correo Electronico"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:layout_height="wrap_content" android:id="@+id/text_correo"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="@+id/cotainerlogin"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.676" app:layout_constraintVertical_bias="0.307"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:layout_height="wrap_content" android:id="@+id/text_password"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="@+id/cotainerlogin"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.609" app:layout_constraintVertical_bias="0.535"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="24171127@uttcampus.edu.mx"
            android:padding="5dp"
            android:id="@+id/input_email"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin"
            app:layout_constraintStart_toStartOf="@+id/cotainerlogin"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.426" app:layout_constraintTop_toTopOf="@+id/cotainerlogin"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="*******"
            android:padding="5dp"
            android:id="@+id/input_password"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin"
            app:layout_constraintStart_toStartOf="@+id/cotainerlogin" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="0.709"/>
    <Button
            android:text="Iniciar Session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt_ingresar"
            app:layout_constraintTop_toTopOf="@+id/cotainerlogin"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin"
            app:layout_constraintStart_toStartOf="@+id/cotainerlogin" app:layout_constraintVertical_bias="0.748"
            android:backgroundTint="#F85959"/>
    <Button
            android:text="Registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt_registrar"
            app:layout_constraintTop_toTopOf="@+id/cotainerlogin"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin"
            app:layout_constraintStart_toStartOf="@+id/cotainerlogin" app:layout_constraintVertical_bias="0.862"
            android:backgroundTint="#F85959" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Olvide mi Constraseña"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_olvide"
            app:layout_constraintTop_toTopOf="@+id/cotainerlogin"
            app:layout_constraintBottom_toBottomOf="@+id/cotainerlogin"
            app:layout_constraintEnd_toEndOf="@+id/cotainerlogin"
            app:layout_constraintStart_toStartOf="@+id/cotainerlogin" app:layout_constraintVertical_bias="0.972"
            app:layout_constraintHorizontal_bias="0.569"/>

</androidx.constraintlayout.widget.ConstraintLayout>